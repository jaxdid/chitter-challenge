<h2>Log In</h2>
<h3 id="alert" style="color: red">
  <%= @alert %>
</h3>
<form action="/login" method="POST">
  <label for="username">
    <strong>Username</strong>
    <input type="text" name="username">
  </label>
  <br />
  <label for="password">
    <strong>Password</strong>
    <input type="text" name="password">
  </label>
  <br />
  <input type="submit" value="Log in">
</form>